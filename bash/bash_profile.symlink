# This file is only executed for login shells. That means that it gets executed when logging in over SSH or logging into KDE, but not when a new terminal window is opened.

# Just source .bashrc to load all our settings for bash
if [ -f ~/.bashrc ]; then
   source ~/.bashrc
fi

ulimit -n 2048

[[ -s "$HOME/.rvm/scripts/rvm" ]] && source "$HOME/.rvm/scripts/rvm" # Load RVM into a shell session *as a function*

export PATH=$PATH:/usr/local/adt-bundle-mac-x86_64-20130729/sdk/tools
export PATH="$HOME/.rbenv/bin:$PATH"
eval "$(rbenv init -)"
export PATH="$HOME/.rbenv/plugins/ruby-build/bin:$PATH"
